<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/txt_nom_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btn_contacte_administrateur"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_suppr_compte"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dark_btn"
        android:textColor="@android:color/white"
        android:text="Contacter un administrateur" />

    <Button
        android:id="@+id/btn_suppr_compte"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_deconnexion"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dark_btn"
        android:textColor="@android:color/white"
        android:text="Supprimer ce compte" />

    <Button
        android:id="@+id/btn_deconnexion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dark_btn"
        android:textColor="@android:color/white"
        android:text="Se dÃ©connecter" />

</RelativeLayout>